<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".FileList">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothamthin"
        android:gravity="center"
        android:text="Elenco File "
        android:layout_marginTop="16dp"
        android:textColor="@color/orangeAccent"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/filelist_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textColor="@color/white"
        android:fastScrollAlwaysVisible="false"
        android:fastScrollEnabled="true"
        android:scrollbarStyle="outsideOverlay" >

    </ListView>
    <!--ImageView
        android:id="@+id/imageviewClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" /-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/gotham2"
            android:text="Back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/gotham2"
            android:text="Home"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>