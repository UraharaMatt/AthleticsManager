<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/athleteNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gotham2"
                android:text="Nome File"
                android:textColor="@color/orangeAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/athleteNameView"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/gotham2"
                android:minHeight="30dp"
                android:text="nome"
                android:textAlignment="center"
                android:textColor="@color/darkblue" />
        </LinearLayout>

        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/UserTXT"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gotham2"
                android:text="Mail Utente"
                android:textColor="@color/orangeAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/User"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minHeight="30dp"
                android:fontFamily="@font/gothamthin"
                android:text="Nome Utente"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textStyle="italic" />
        </LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnDeleteFile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/orangeAccent"
                android:cropToPadding="false"
                android:fontFamily="@font/gotham2"
                android:minHeight="48dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:text="ELIMINA FILE"
                android:textColor="@color/darkblue"
                android:textSize="15sp"
                app:icon="@drawable/ic_delete_file" />

            <Button
                android:id="@+id/btnDownloadFile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/orangeAccent"
                android:cropToPadding="false"
                android:minHeight="48dp"
                android:padding="5dp"
                android:fontFamily="@font/gotham2"
                android:textSize="15sp"
                android:scaleType="fitCenter"
                android:text="DOWNLOAD FILE"
                android:textColor="@color/darkblue"
                app:icon="@drawable/ic_download_file"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>